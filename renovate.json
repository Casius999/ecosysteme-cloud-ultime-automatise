{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboard",
    ":semanticCommits",
    ":automergePatch",
    ":automergeMinor",
    ":enableVulnerabilityAlerts"
  ],
  "schedule": ["every weekend"],
  "timezone": "Europe/Paris",
  "labels": ["dependencies", "automated", "renovate"],
  "reviewers": ["Casius999"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    },
    {
      "matchManagers": ["terraform"],
      "addLabels": ["terraform-update"]
    },
    {
      "matchManagers": ["docker-compose", "dockerfile"],
      "addLabels": ["docker-update"]
    },
    {
      "matchManagers": ["github-actions"],
      "addLabels": ["github-actions-update"]
    },
    {
      "matchManagers": ["kubernetes"],
      "addLabels": ["kubernetes-update"]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"]
  },
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Tableau de bord des d√©pendances",
  "prCreation": "immediate",
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "assignees": ["Casius999"],
  "ignorePaths": ["**/node_modules/**"]
}